<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>


    <!--AdminSevlet-->
    <servlet>
        <servlet-name>AdminLoginSerlvet</servlet-name>
        <servlet-class>Admin.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginSerlvet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <servlet-class>Admin.AdminLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <url-pattern>/adminLogout</url-pattern>
    </servlet-mapping>

    <!--User CRUD-->
    <servlet>
        <servlet-name>QueryUserServlet</servlet-name>
        <servlet-class>Admin.UserManage.QueryUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryUserServlet</servlet-name>
        <url-pattern>/adminQueryUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>Admin.UserManage.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/adminAddUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>Admin.UserManage.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/adminUpdateUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>Admin.UserManage.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/adminDeleteUser</url-pattern>
    </servlet-mapping>
    <!--Menu CRUD-->
    <servlet>
        <servlet-name>QueryMenuServlet</servlet-name>
        <servlet-class>Admin.MenuManage.QueryMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryMenuServlet</servlet-name>
        <url-pattern>/adminQueryMenu</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddMenuServlet</servlet-name>
        <servlet-class>Admin.MenuManage.AddMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMenuServlet</servlet-name>
        <url-pattern>/adminAddMenu</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateMenuServlet</servlet-name>
        <servlet-class>Admin.MenuManage.UpdateMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateMenuServlet</servlet-name>
        <url-pattern>/adminUpdateMenu</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteMenuServlet</servlet-name>
        <servlet-class>Admin.MenuManage.DeleteMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteMenuServlet</servlet-name>
        <url-pattern>/adminDeleteMenu</url-pattern>
    </servlet-mapping>
    <!--Order CRUD-->
    <servlet>
        <servlet-name>QueryOrderServlet</servlet-name>
        <servlet-class>Admin.OrderManage.QueryOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryOrderServlet</servlet-name>
        <url-pattern>/adminQueryOrder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderStatisticServlet</servlet-name>
        <servlet-class>Admin.OrderManage.OrderStatisticServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderStatisticServlet</servlet-name>
        <url-pattern>/adminOrderStatistics</url-pattern>
    </servlet-mapping>



    <!--UserServlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>User.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>User.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckTelServlet</servlet-name>
        <servlet-class>Check.CheckTelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckTelServlet</servlet-name>
        <url-pattern>/checktel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserInfoServlet</servlet-name>
        <servlet-class>User.UserInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInfoServlet</servlet-name>
        <url-pattern>/userinfo</url-pattern>
    </servlet-mapping>

